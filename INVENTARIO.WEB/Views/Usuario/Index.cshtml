
@{
    ViewBag.Title = "Usuario";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-2.2.4/dt-1.10.13/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-2.2.4/dt-1.10.13/datatables.min.js"></script>

<div class="content-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-telefonica">
                <div class="panel-heading">
                    <h3 class="panel-title">Usuarios dsadasdasdas</h3>
                </div>
                <div class="panel-body">
                    @{
                        string error = (TempData["Error"] ?? string.Empty) as string;
                        if (!string.IsNullOrEmpty(error))
                        {
                            <div class="alert alert-danger fade in" role="alert">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                <span style="font-weight: bold;font-size: medium;">Error:</span>
                                @error
                            </div>
                        }

                        string exito = (TempData["Exito"] ?? string.Empty) as string;
                        if (!string.IsNullOrEmpty(exito))
                        {
                            <div class="alert alert-success fade in" role="alert">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                                <span style="font-weight: bold;font-size: medium;">Excelente:</span>
                                @exito
                            </div>
                        }
                    }
                    <div class="alert alert-success" style="display:none;">
                        <button type="button" class="close" data-dismiss="alert" onclick="notificationMessageClose()">&times;</button>
                        <div id="alert-success-message"></div>
                    </div>
                    <div class="alert alert-danger" style="display:none;">
                        <button type="button" class="close" data-dismiss="alert" onclick="notificationErrorClose()">&times;</button>
                        <div id="alert-danger-message"></div>
                    </div>
                    <table id="myDataTable" class="table display">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>PerfilId</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <a id="btn-nuevo" class="btn btn btn-primary" >Nuevo</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Usuario/index.js"></script>

